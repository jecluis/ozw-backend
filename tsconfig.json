{
  "compileOnSave": false,
  "compilerOptions": {
	"allowSyntheticDefaultImports": true,
    "baseUrl": "./",
	"outDir": "dist/",
	"rootDir": "src/",
	"strict": true,
	"noImplicitAny": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
	],
	"esModuleInterop": true
  }
}
